/* Tablet */
@media screen and (min-width: 768px) and (max-width: 1157px) {
  .header-container {
    display: flex;
  }

  .navigation {
    display: flex;
    align-items: center;
  }

  .menu {
    display: flex;
    gap: 40px;
  }

  .menu .current {
    color: $pressed-state-color;
  }

  .menu-link {
    position: relative;
    display: block;
    padding: 24px 0;

    font-weight: $medium-font-weight;
    font-size: 16px;
    line-height: 1.5;
    letter-spacing: $primary-letter-spacing;
    color: $primary-blue-color;

    transition: color 250ms $timing-function;
  }

  .menu-link:hover,
  .menu-link:focus {
    color: $pressed-state-color;

    transition: color 250ms $timing-function;
  }

  .current::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -1px;

    width: 100%;
    height: 4px;
    flex-shrink: 0;

    background-color: $pressed-state-color;
    border-radius: 2px;
  }

  .contacts {
    font-style: normal;
    align-items: center;
    margin-left: auto;
  }

  .contacts-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
    padding: 16px 0;
  }

  .contacts-item {
    display: block;
    line-height: 1.5;
    letter-spacing: $primary-letter-spacing;

    font-size: 12px;
    line-height: calc(14 / 12);
    letter-spacing: 0.04em;
    color: $text-description-color;

    transition: color 250ms $timing-function;
  }

  .contacts-item:hover,
  .contacts-item:focus {
    color: $pressed-state-color;

    transition: color 250ms $timing-function;
  }

  .mobile-menu {
    display: none;
  }

  .burger-menu-btn {
    display: none;
  }
}

