/* ================== PORTFOLIO ================== */
.portfolio-hero {
    padding-top: 96px;
    padding-bottom: 120px;
}

.portfolio-filter {
    display: flex;
    gap: 24px;
    justify-content: center;
    margin-bottom: 72px;
}

.portfolio-list {
    display: flex;
    flex-wrap: wrap;
    gap: 48px 24px;
}

.portfolio-card {
    flex-basis: calc((100% - 2 * 24px) / 3);

    transition: box-shadow 250ms $timing-function;
}

.portfolio-card-link {
   display: block; 
}

.portfolio-card-link {
    &:hover,
    &:focus {
        box-shadow: 0px 2px 1px 0px rgba(46, 47, 66, 0.08),
            0px 1px 1px 0px rgba(46, 47, 66, 0.16),
            0px 1px 6px 0px rgba(46, 47, 66, 0.08);

        transition: box-shadow 250ms $timing-function;
    }
}

.portfolio-card-text {
    padding: 32px 16px;

    border: 1px solid $secondary-white-color;
    border-top: none;
}

.portfolio-box {
    position: relative;
    overflow: hidden;

    &::before {
        content: "";
        display: inline-block;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;

        transition: transform 250ms $timing-function;
    }
}

.portfolio-box:hover .overlay,
.portfolio-box:focus .overlay,
.portfolio-card:focus .overlay,
.portfolio-card:focus .overlay,
.portfolio-card-link:focus .overlay {
    transform: translateY(0);
    transition: transform 250ms $timing-function;
}

.overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 40px 32px;

    background-color: $primary-brand-color;

    line-height: 1.5;
    letter-spacing: $primary-letter-spacing;
    color: $text-light-color;

    transition: transform 250ms $timing-function;
    transform: translateY(100%);
}
/* ================== /PORTFOLIO ================== */