/* ================== MODAL WINDOW ================== */
.modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;

  width: 100%;
  height: 100%;
  transition: opacity 250ms $timing-function,
    visibility 250ms $timing-function;

  background-color: rgba(46, 47, 66, 0.40);
}

.modal-backdrop.is-hidden {
  visibility: hidden;
  opacity: 0;
  pointer-events: none;
}

.modal-window {
  position: absolute;
  top: 50%;
  left: 50%;
  padding: 24px;
  padding-top: 72px;
  transform: translate(-50%, -50%);

  width: 408px;
  min-height: 584px;
  flex-shrink: 0;
  border-radius: 4px;
  box-shadow: 0px 2px 1px 0px rgba(0, 0, 0, 0.20),
    0px 1px 3px 0px rgba(0, 0, 0, 0.12),
    0px 1px 1px 0px rgba(0, 0, 0, 0.14);

  background-color: $modal-background-color;

  transition: transform 250ms $timing-function;
}

/* Modal form */
.modal-form-description {
    margin-bottom: 16px;

    text-align: center;
    font-weight: $medium-font-weight;
    line-height: 1.5;
    letter-spacing: $primary-letter-spacing;
    color: $primary-blue-color;
}

.modal-form-element {
    margin-bottom: 8px;
}

.modal-form-label {
    display: block;
    margin-bottom: 4px;

    font-size: $form-label-font-size;
    line-height: 1.17;
    letter-spacing: 0.04em;
    color: $icon-gray-color;
}

.modal-input-wrapper {
    position: relative;
}

.modal-form-input {
    width: 100%;
    height: 40px;
    flex-shrink: 0;
    padding-left: 38px;

    outline: transparent;
    border-radius: 4px;
    border: 1px solid rgba(46, 47, 66, 0.40);
    background-color: transparent;

    font-size: 18px;

    transition: border-color 250ms $timing-function;
}

.modal-form-input:focus {
    outline-color: transparent;
    outline-offset: 4px;
    border-color: $primary-brand-color;

    fill: $primary-brand-color;
}

.modal-form-icon {
    position: absolute;
    top: 50%;
    left: 16px;
    transform: translateY(-50%);

    fill: $primary-blue-color;

    transition: fill 250ms $timing-function;
}

.modal-form-input:focus + .modal-form-icon {
    fill: $primary-brand-color;
}

.modal-form-element-texarea {
    margin-bottom: 16px;
}

.modal-form-texarea {
    width: 100%;
    height: 120px;
    padding: 8px 16px;

    resize: none;

    border-radius: 4px;
    border: 1px solid rgba(46, 47, 66, 0.40);
    background-color: transparent;
    outline: transparent;

    font-size: $form-label-font-size;
    line-height: 1.17;
    letter-spacing: 0.04em;
    color: rgba(46, 47, 66, 0.4);

    transition: border-color 250ms $timing-function;
}

.modal-form-texarea:focus {
    outline-color: transparent;
    outline-offset: 4px;
    border-color: $primary-brand-color;
}

.modal-form-texarea::placeholder {
    font-size: $form-label-font-size;
    line-height: 1.17;
    letter-spacing: 0.03em;
    color: $icon-gray-color;

}

.modal-form-element-checkbox {
    margin-bottom: 24px;
}

.modal-form-input-checkbox:checked + .modal-form-checkbox-label .modal-form-span-checkbox {
    background-color: $pressed-state-color;
    border: none;

    fill: $text-light-color;
}

.modal-form-checkbox-label {
    display: block;
    align-items: center;

    font-size: $form-label-font-size;
    line-height: 1.17;
    letter-spacing: 0.04em;
    color: $icon-gray-color;
}

.modal-form-checkbox-label a {
    text-decoration: underline;
    color: $primary-brand-color;
}

.modal-form-span-checkbox {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    
    width: 16px;
    height: 16px;

    cursor: pointer;

    border: 1px solid rgba(46, 47, 66, 0.40);
    border-radius: 2px;

    fill: transparent;

    transition: background-color 250ms $timing-function,
        border 250ms $timing-function,
        fill 250ms $timing-function;
}

/* Mobile-min */
@media screen and (max-width: 427px) {
    .modal-window {
        width: 290px;
    }
}

/* Mobile */
@media screen and (min-width: 428px)  and (max-width: 767px) {

    .modal-window {
        width: 392px;
    }
}
