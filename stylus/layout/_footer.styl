/* ================== FOOTER ================== */
.footer {
    padding-top: 100px;
    padding-bottom: 100px;

    background-color: $primary-blue-color;
}

/* Mobile */
@media screen and (max-width: 767px) {

    .footer .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 72px;
    }

    .footer .logo {
        display: inline-block;
        margin-bottom: 16px;
    }

    .footer-block-description {
        text-align: center;
    }

    .footer-description {
        max-width: 268px;

        text-align: left;
        
        line-height: 1.5;
        letter-spacing: $primary-letter-spacing;
        color: $text-light-color;
    }

    .footer-social-common {
        margin-bottom: 16px;

        text-align: center;

        font-family: $primary-font-family;
        font-weight: $medium-font-weight;
        line-height: 1.5;
        letter-spacing: $primary-letter-spacing;
        color: $white-background-color;
    }

    .footer-socials-list {
        display: flex;
        gap: 16px;
    }

    .footer-social-icon {
        width: 24px;
        height: 24px;
        flex-shrink: 0;

        fill: $text-light-color;
    }

    .footer-form-description {
        display: block;
        margin-bottom: 16px;

        text-align: center;

        font-family: $primary-font-family;
        font-weight: $medium-font-weight;
        line-height: 1.5;
        letter-spacing: $primary-letter-spacing;
        color: $white-background-color;
    }

    .footer-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 16px;
    }

    .footer-form-input {
        width: 398px;
        height: 40px;
        flex-shrink: 0;
        padding-left: 16px;

        background-color: transparent;

        border-radius: 4px;
        border: 1px solid $white-background-color;
        box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.15);

        font-size: $form-label-font-size;
        line-height: 1.5;
        letter-spacing: 0.04em;
        color: $white-background-color;
    }

    .footer-form-input::placeholder {
        font-size: $form-label-font-size;
        line-height: 2;
        letter-spacing: 0.03em;
        color: $white-background-color;
    }

    .footer-form-btn {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 165px;
        height: 40px;
        padding: 8px 24px;

        cursor: pointer;

        border: none;
        border-radius: 4px;
        background-color: $primary-brand-color;
        
        font-weight: $medium-font-weight;
        line-height: 1.5;
        letter-spacing: 0.04em;
        color: $white-background-color;

        transition: background-color 250ms $timing-function;
    }

    .footer-form-btn-icon {
        margin-left: 16px;
    }
}

/* Mobile-min */
@media screen and (min-width: 320px) and (max-width: 427px) {
    
    .footer-form-input {
        width: 290px;
    }
}

