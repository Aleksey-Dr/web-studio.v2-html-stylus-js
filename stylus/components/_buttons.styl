/* ================== BUTTONS ================== */
.btn {
    padding: 12px 24px;

    cursor: pointer;

    border: 1px solid $secondary-white-color;
    border-radius: 4px;
    background-color: $text-light-color;

    text-align: center;
    font-weight: $medium-font-weight;
    line-height: 1.5;
    letter-spacing: 0.04em;
    color: $primary-brand-color;

    transition: background-color 250ms $timing-function,
        border-color 250ms $timing-function,
        box-shadow 250ms $timing-function,
        color 250ms $timing-function;
}

.btn:hover,
.btn:focus {
    border: 1px solid transparent;

    background-color: $pressed-state-color;
    box-shadow: 0px 3px 1px rgba(0, 0, 0, 0.1),
        0px 2px 1px rgba(0, 0, 0, 0.08),
        0px 2px 2px rgba(0, 0, 0, 0.12);

    color: $white-background-color;

    transition: background-color 250ms $timing-function,
        border-color 250ms $timing-function,
        box-shadow 250ms $timing-function,
        color 250ms $timing-function;
}

/* Button close */
.close-btn {
  position: absolute;
  top: 24px;
  right: 24px;

  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;

  width: 24px;
  height: 24px;
  flex-shrink: 0;

  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  background-color: $secondary-white-color;

  line-height: 0;

  cursor: pointer;

  transition: background-color 250ms $timing-function,
    border 250ms $timing-function;
}

.close-btn:hover,
.close-btn:focus {
    border: none;
    background-color: $pressed-state-color;
}

.icon-close {
  fill: $primary-blue-color;

  transition: fill 250ms $timing-function;
}

.close-btn:hover .icon-close,
.close-btn:focus .icon-close {
    fill: $white-background-color;
}
/* /Button close */
